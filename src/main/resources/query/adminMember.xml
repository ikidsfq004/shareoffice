<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wt.admin.member.dao.adminMemberDao">

	<select id="memberList" resultType="adminMember">
		SELECT c_id, c_pwd, c_email, c_name, c_phone, TO_CHAR(c_regdate, 'yyyy-mm-dd') c_regdate, c_disabled
		FROM client_tbl
		ORDER BY c_regdate DESC
	</select>
	
	<select id="memberDetail" resultType="adminMember">
		SELECT *
		FROM client_tbl
		WHERE c_id = #{c_id}
	</select>
	
	<update id="memberDisabled" parameterType="adminMember">
		UPDATE client_tbl
		SET
		c_disabled = #{c_disabled}
		WHERE
		c_id = #{c_id}
	</update>
	
